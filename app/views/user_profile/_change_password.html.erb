<div class="row center-box " id="change-password-panel" style="display: none">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-success">
      <div class="panel panel-heading">
        <div class="row">
          <div class="col-lg-11 col-md-11 col-xs-10 ">
            <h4 style="text-align: center">Please, enter your current password to proceed</h4>
          </div>
          <div class="col-lg-1 col-md-1 col-xs-2">
            <a href="#" id="close-password-panel">
              <span class="glyphicon glyphicon-remove" onclick="showPanel(false)"></span>
            </a>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for @user, :action => 'update', url: user_profile_update_path, html: {method: :put, role: 'form'} do |f| %>
                <div class="form-group">
                  <%= f.password_field :current_password, autofocus: true, class: 'form-control', placeholder: 'Current Password' %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'New Password', id: 'password' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', id: 'password-confirmation' %>
                </div>
                <%= f.submit 'Change my password', class: 'btn btn-primary center-block', style: 'text-align: center', name: 'update_password' %>
                </div>
            <% end %>
            </div>
      </div>
    </div>
  </div>
</div>

