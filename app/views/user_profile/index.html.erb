<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-1 toppad" >


      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title" style="text-align: center"><%= @user_profile.nickname %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>
            <div class="col-md-9 col-lg-9 ">
              <table class="table table-user-information">
                <tbody>
                <tr>
                  <td>First Name</td>
                  <td><%= @user_profile.first_name %></td>
                </tr>

                <tr>
                  <td>Last Name</td>
                  <td><%= @user_profile.last_name %></td>
                </tr>

                <tr>
                  <td>Gender</td>
                  <td><%= @user_profile.gender %></td>
                </tr>
                <tr>
                  <td>Home Address</td>
                  <td><%= @user_profile.home_address %></td>
                </tr>
                <tr>
                  <td>Post Code</td>
                  <td><%= @user_profile.post_code%></td>
                </tr>
                <tr>
                  <td>Email</td>
                  <td><%= @current_user.email%></td>
                </tr>
                <tr>
                <td>Phone Number</td>
                  <td><%= @user_profile.phone_nubmer %></td>
                </tr>

                </tbody>
              </table>

              <a href="#" class="btn btn-primary">Edit</a>
              <a href="#" class="btn btn-primary">Save</a>
            </div>
          </div>
        </div>
        <div class="panel-footer">

        </div>

      </div>
    </div>
  </div>
</div>